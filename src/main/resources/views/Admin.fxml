<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="controllers.AdminController">

    <BorderPane prefWidth="1000" prefHeight="600"
                style="-fx-background-color: #121212;">

        <!-- SIDEBAR -->
        <left>
            <VBox spacing="15" alignment="TOP_CENTER"
                  style="-fx-background-color: #1f1f1f; -fx-padding: 25; -fx-min-width: 200;">

                <Label text="⚙ Admin"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />

                <Button text="📊 Dashboard" onAction="#ouvrirDashboard"
                        style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-pref-width: 160;" />

                <Button text="📘 Questions" onAction="#ouvrirQuestions"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-pref-width: 160;" />

                <Button text="📋 Réponses" onAction="#ouvrirReponses"
                        style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-pref-width: 160;" />

                <Button text="🗃 Archives" onAction="#ouvrirArchives"
                        style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-pref-width: 160;" />

                <Button text="📄 Exporter PDF" onAction="#exporterPDF"
                        style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-pref-width: 160;" />

                <Button text="✏️ Modifier" onAction="#modifierEvaluation"
                        style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-pref-width: 160;" />

                <Button text="🗑 Supprimer" onAction="#supprimerEvaluation"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-pref-width: 160;" />

                <Button text="👮 Liste des bannis" onAction="#ouvrirListeBannis"
                        style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-size: 14px;
                       -fx-font-weight: bold; -fx-background-radius: 8; -fx-pref-width: 160;" />

                <Button text="↩ Accueil" onAction="#retourAccueil"
                        style="-fx-background-color: #bdc3c7; -fx-text-fill: black; -fx-font-weight: bold;
                               -fx-background-radius: 8; -fx-pref-width: 160;" />
            </VBox>
        </left>

        <!-- TOP HEADER -->
        <top>
            <VBox spacing="10" style="-fx-background-color: #1f1f1f; -fx-padding: 25;">
                <HBox spacing="20" alignment="CENTER_LEFT">
                    <Button text="🌙 Mode Sombre" onAction="#toggleTheme"
                            style="-fx-background-color: #444; -fx-text-fill: white; -fx-background-radius: 6;" />

                    <Label text="📋 Gestion des Évaluations"
                           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" />

                    <Region HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="searchField" promptText="🔍 Rechercher..."
                               style="-fx-background-color: #2c2c2c; -fx-text-fill: white; -fx-prompt-text-fill: gray;
                                      -fx-background-radius: 6; -fx-pref-width: 250;" />
                </HBox>

                <HBox spacing="10">
                    <TextField fx:id="nomField" promptText="Nom de l'évaluation"
                               style="-fx-pref-width: 200; -fx-background-color: #2b2b2b; -fx-text-fill: white;
                                      -fx-background-radius: 6;" />
                    <TextField fx:id="descriptionField" promptText="Description"
                               style="-fx-pref-width: 200; -fx-background-color: #2b2b2b; -fx-text-fill: white;
                                      -fx-background-radius: 6;" />
                    <ComboBox fx:id="typeBox" promptText="Type"
                              style="-fx-pref-width: 150; -fx-background-color: #2b2b2b; -fx-text-fill: white;
                                     -fx-background-radius: 6;" />
                    <Button text="➕ Ajouter" onAction="#ajouterEvaluation"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;
                                   -fx-background-radius: 6;" />
                </HBox>
            </VBox>
        </top>

        <!-- TABLE CENTER -->
        <center>
            <TableView fx:id="tableView" prefHeight="400"
                       style="-fx-background-color: #1a1a1a; -fx-border-radius: 8; -fx-background-radius: 8; -fx-text-fill: white;">
                <columns>
                    <TableColumn fx:id="idCol" text="ID" prefWidth="60"/>
                    <TableColumn fx:id="nomCol" text="Nom" prefWidth="200"/>
                    <TableColumn fx:id="typeCol" text="Type" prefWidth="150"/>
                    <TableColumn fx:id="dateCol" text="Date de création" prefWidth="200"/>
                </columns>
            </TableView>
        </center>

    </BorderPane>
</StackPane>
