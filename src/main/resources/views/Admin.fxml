<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.image.Image?>

<StackPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.AdminController">
    <children>
        <AnchorPane prefHeight="700.0" prefWidth="1000.0">
            <children>
                <!-- NAVBAR -->
                <VBox layoutY="0" spacing="10.0" style="-fx-background-color:skyblue;" prefWidth="974.0">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <padding>
                            <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                        </padding>

                        <ImageView fitHeight="40" fitWidth="40" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@images/tawwa don 3.png"/>
                            </image>
                        </ImageView>
                        <Label text="Tawwa Dons - Admin Panel" style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0066ff;"/>
                        <Pane HBox.hgrow="ALWAYS"/>
                        <HBox spacing="20" alignment="CENTER_RIGHT">
                            <Button fx:id="adminAccueilBtn" text="↩ Accueil" onAction="#retourAccueil" style="-fx-background-color: #ecf0f1; -fx-font-weight: bold;" />
                            <Button fx:id="adminLogoutBtn" text="Déconnexion" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        </HBox>
                    </HBox>
                </VBox>

                <!-- CONTENU ADMIN -->
                <VBox layoutY="80" spacing="20" AnchorPane.topAnchor="80" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                    <HBox spacing="10">
                        <Button text="📊 Dashboard" onAction="#ouvrirDashboard" style="-fx-background-color: #bdc3c7; -fx-font-weight: bold;"/>
                        <Button text="📘 Questions" onAction="#ouvrirQuestions" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button text="📋 Réponses" onAction="#ouvrirReponses" style="-fx-background-color: #8e44ad; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button text="🗄 Archiver" onAction="#archiverEvaluation" style="-fx-background-color: #9b59b6; -fx-text-fill: white; -fx-font-weight: bold;"/> <!-- 🔥 AJOUT ICI -->

                        <Button text="💃 Hestorique" onAction="#ouvrirArchives" style="-fx-background-color: #7f8c8d; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button text="📄 Exporter PDF" onAction="#exporterPDF" style="-fx-background-color: #16a085; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button text="✏️ Modifier" onAction="#modifierEvaluation" style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button text="🗑 Supprimer" onAction="#supprimerEvaluation" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;"/>
                        <Button text="👮 Liste des bannis" onAction="#ouvrirListeBannis" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    </HBox>

                    <HBox spacing="10">
                        <TextField fx:id="nomField" promptText="Nom de l'évaluation" style="-fx-pref-width: 200; -fx-background-color: #ecf0f1; -fx-background-radius: 6;"/>
                        <TextField fx:id="descriptionField" promptText="Description" style="-fx-pref-width: 200; -fx-background-color: #ecf0f1; -fx-background-radius: 6;"/>
                        <ComboBox fx:id="typeBox" promptText="Type" style="-fx-pref-width: 150; -fx-background-color: #ecf0f1; -fx-background-radius: 6;"/>
                        <Button text="➕ Ajouter" onAction="#ajouterEvaluation" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 6;"/>
                    </HBox>

                    <TextField fx:id="searchField" promptText="🔍 Rechercher..." style="-fx-background-color: #ecf0f1; -fx-background-radius: 6;"/>

                    <TableView fx:id="tableView" prefHeight="400">
                        <columns>
                            <TableColumn fx:id="idCol" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="nomCol" text="Nom" prefWidth="200"/>
                            <TableColumn fx:id="typeCol" text="Type" prefWidth="150"/>
                            <TableColumn fx:id="dateCol" text="Date de création" prefWidth="200"/>
                        </columns>
                    </TableView>
                </VBox>
            </children>
        </AnchorPane>
    </children>
</StackPane>
