<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controllers.ReponsesController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: linear-gradient(to bottom, #181818, #121212);">

    <!-- SIDEBAR -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #1c1c1c; -fx-padding: 25;">
            <Label text="🔙 Navigation"
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Button text="↩ Retour" onAction="#retourAdmin"
                    style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 6; -fx-pref-width: 160;" />
        </VBox>
    </left>

    <!-- HEADER TOP -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20"
              style="-fx-background-color: transparent; -fx-padding: 25;">
            <Label fx:id="evalLabel"
                   text="📋 Réponses de l'évaluation"
                   style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="🗑️ Supprimer tout" onAction="#supprimerToutesReponses"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold;
                           -fx-background-radius: 6; -fx-padding: 6 16;" />
        </HBox>
    </top>

    <!-- TABLE DES RÉPONSES -->
    <center>
        <TableView fx:id="tableView" prefHeight="400"
                   style="-fx-background-color: #1a1a1a; -fx-border-radius: 6; -fx-background-radius: 6;">
            <columns>
                <TableColumn fx:id="utilisateurCol" text="Utilisateur" prefWidth="140"/>
                <TableColumn fx:id="questionCol" text="Question" prefWidth="300"/>
                <TableColumn fx:id="reponseCol" text="Réponse" prefWidth="150"/>
                <TableColumn fx:id="bonneCol" text="Bonne Réponse" prefWidth="150"/>
                <TableColumn fx:id="statutCol" text="Statut" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <!-- STATISTIQUES -->
    <bottom>
        <VBox spacing="10"
              style="-fx-background-color: #1f1f1f; -fx-border-color: #2c3e50; -fx-border-width: 1 0 0 0; -fx-padding: 20;">
            <Label text="📊 Statistiques par utilisateur"
                   style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: white;" />
            <VBox fx:id="statsBox" spacing="5"/>
        </VBox>
    </bottom>
</BorderPane>
