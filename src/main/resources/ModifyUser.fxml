<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ModifyUserController">
   <children>
      <VBox alignment="CENTER" layoutX="150.0" layoutY="50.0" prefHeight="400.0" prefWidth="500.0" spacing="15.0">
         <children>
            <Label text="Modifier mon profil" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            
            <Label fx:id="errorLabel" textFill="RED" wrapText="true" />
            
            <GridPane hgap="10.0" vgap="15.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Label text="Nom:" />
                  <Label text="Prénom:" GridPane.rowIndex="1" />
                  <Label text="Email:" GridPane.rowIndex="2" />
                  <Label text="Nouveau mot de passe:" GridPane.rowIndex="3" />
                  <Label text="Confirmer mot de passe:" GridPane.rowIndex="4" />
                  <Label text="Rôle:" GridPane.rowIndex="5" />
                  
                  <TextField fx:id="nomField" promptText="Votre nom" GridPane.columnIndex="1" />
                  <TextField fx:id="prenomField" promptText="Votre prénom" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField fx:id="emailField" promptText="Votre email" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <PasswordField fx:id="passwordField" promptText="Laissez vide pour ne pas changer" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                  <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                  <ComboBox fx:id="roleComboBox" prefWidth="300.0" GridPane.columnIndex="1" GridPane.rowIndex="5" />
               </children>
            </GridPane>
            
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="saveButton" defaultButton="true" prefWidth="120.0" style="-fx-background-color: #4CAF50;" text="Enregistrer" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Button>
                  <Button fx:id="cancelButton" cancelButton="true" prefWidth="120.0" style="-fx-background-color: #f44336;" text="Annuler" textFill="WHITE">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </HBox>
            
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Button fx:id="historyButton" prefWidth="250.0" style="-fx-background-color: #3498db;" text="Historique de connexion" textFill="WHITE" onAction="#navigateToConnectionHistory">
                     <font>
                        <Font size="14.0" />
                     </font>
                  </Button>
               </children>
               <padding>
                  <Insets top="10.0" />
               </padding>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane> 