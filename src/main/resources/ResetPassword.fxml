<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" alignment="CENTER" prefWidth="400" prefHeight="500" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.ResetPasswordController">
    <padding>
        <Insets top="30" right="30" bottom="30" left="30" />
    </padding>

    <Label text="Réinitialisation du mot de passe" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
    
    <HBox styleClass="form-hbox" alignment="CENTER">
        <VBox spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label text="Étape 1: Entrez votre adresse e-mail pour recevoir un code" style="-fx-font-weight: bold;" />
            <TextField fx:id="emailField" promptText="Email" />
            <Button text="Envoyer le code de vérification" onAction="#sendVerificationCode" prefWidth="250" />
        </VBox>
    </HBox>
    
    <Separator />
    
    <HBox styleClass="form-hbox" alignment="CENTER">
        <VBox spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label text="Étape 2: Entrez le code reçu par e-mail" style="-fx-font-weight: bold;" />
            <TextField fx:id="codeField" promptText="Code de vérification" />
            <Button text="Vérifier le code" onAction="#verifyCode" prefWidth="250" />
        </VBox>
    </HBox>
    
    <Separator />
    
    <HBox styleClass="form-hbox" alignment="CENTER">
        <VBox spacing="5" alignment="CENTER" HBox.hgrow="ALWAYS">
            <Label text="Étape 3: Créez un nouveau mot de passe" style="-fx-font-weight: bold;" />
            <PasswordField fx:id="newPasswordField" promptText="Nouveau mot de passe" />
            <PasswordField fx:id="confirmPasswordField" promptText="Confirmer le mot de passe" />
            <Button text="Réinitialiser le mot de passe" onAction="#resetPassword" prefWidth="250" />
        </VBox>
    </HBox>
    
    <Region VBox.vgrow="ALWAYS" />
    
    <HBox alignment="CENTER">
        <Hyperlink text="Retour à la connexion" onAction="#navigateToLogin" />
    </HBox>
</VBox> 