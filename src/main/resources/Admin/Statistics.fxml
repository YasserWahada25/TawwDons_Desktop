<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.chart.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.StatisticsController"
            style="-fx-background-color: #f5f5f5;" prefWidth="900" prefHeight="600">

    <top>
        <VBox style="-fx-padding: 20;" spacing="10">
            <Label text="Statistiques"
                   style="-fx-font-size: 24px; -fx-font-weight: bold;" />
            <HBox spacing="10">
                <Button text="Liste des utilisateurs" onAction="#navigateToUserList"
                        style="-fx-background-color: #2980b9; -fx-text-fill: white; -fx-background-radius: 8;" />
                <Button text="Actualiser" onAction="#refreshData"
                        style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-background-radius: 8;" />
            </HBox>
        </VBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox alignment="CENTER" spacing="30" style="-fx-padding: 20;">
                <!-- User Statistics Card -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 10);">
                    <Label text="Statistiques des utilisateurs" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Separator style="-fx-padding: 10 0 10 0;" />

                    <GridPane hgap="20" vgap="15">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                        <Label text="Nombre total d'utilisateurs:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="totalUsersLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Utilisateurs actifs:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="activeUsersLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Utilisateurs bannis:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="bannedUsersLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Administrateurs:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label fx:id="adminUsersLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </GridPane>
                </VBox>

                <!-- Connection Statistics Card -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 10);">
                    <Label text="Statistiques des connexions" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Separator style="-fx-padding: 10 0 10 0;" />

                    <GridPane hgap="20" vgap="15">
                        <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>

                        <Label text="Nombre total de connexions:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label fx:id="totalConnectionsLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                        <Label text="Connexions aujourd'hui:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                        <Label fx:id="todayConnectionsLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                        <Label text="Connexions cette semaine:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                        <Label fx:id="weekConnectionsLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                        <Label text="Connexions ce mois:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                        <Label fx:id="monthConnectionsLabel" text="0" style="-fx-font-weight: bold;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                    </GridPane>
                </VBox>

                <!-- Simple Bar Chart for Connections -->
                <VBox style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 20; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 10);">
                    <Label text="Graphique des connexions" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <Separator style="-fx-padding: 10 0 10 0;" />

                    <BarChart fx:id="connectionsChart" legendVisible="false" prefHeight="300">
                        <xAxis>
                            <CategoryAxis label="PÃ©riode" />
                        </xAxis>
                        <yAxis>
                            <NumberAxis label="Nombre de connexions" />
                        </yAxis>
                    </BarChart>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
